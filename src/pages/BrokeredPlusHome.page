                                                                rendered="{!NOT(CurrentUser.Marketing_Only__c)}"
                                                                action="{!URLFOR($Action.Job_Seeker__c.New)}"
                                                                rerender="msgs" />
                                            <apex:commandbutton value="Add Employer"
