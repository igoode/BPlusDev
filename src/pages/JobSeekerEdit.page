<apex:page standardController="Job_Seeker__c" extensions="JobSeekerExtension" showHeader="false" sidebar="false">
    <style>
    textarea
    {
        width: 300px;
    }
    </style>
    <apex:variable value="{!Job_Seeker__c}" var="js" />
    <apex:composition template="BPTemplate" />
    <apex:pageMessages id="msgs" />    
    <apex:sectionHeader title="{!IF(ISBLANK(js.ID), 'New Job Seeker', Job_Seeker__c.Name)}"/>
    <apex:form >
        <apex:pageBlock >
            <apex:pageblockSection columns="1">
                <apex:inputfield value="{!js.Name}" required="true"/>  
                <apex:inputfield value="{!js.JSK_ID__c}" required="true"/> 
            </apex:pageblockSection>  
            <apex:pageblockSection columns="1" title="Marketing">
                <apex:inputfield value="{!js.Marketing_Started__c}"/>
                <apex:inputfield value="{!js.Marketing_Ended__c}"/>
            </apex:pageblockSection>  
            <apex:pageblockSection columns="1">
                <apex:inputfield value="{!js.X1_Marketable_Attribute__c}"/>
                <apex:inputfield value="{!js.X2_Marketable_Attribute__c}"/>
                <apex:inputfield value="{!js.X3_Marketable_Attribute__c}"/>
            </apex:pageblockSection>  
            <apex:pageblockSection columns="1" >   
                <apex:inputfield value="{!js.Assigned_To__c}"/>
                <apex:inputfield value="{!js.Suburb__c}"/>
                <apex:inputfield value="{!js.State__c}"/>
                <apex:inputfield value="{!js.Mobile__c}"/>
                <apex:inputfield value="{!js.Email__c}"/> 
            </apex:pageblockSection>  
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton value="Save" action="{!saveOverride}" reRender="msgs"/>
                <apex:commandButton value="Home" action="{!URLFOR($Page.BrokeredPlusHome)}" immediate="true"/>
            </apex:pageBlockButtons> 
        </apex:pageBlock>        
    </apex:form>
</apex:page>