<apex:page id="BPReportEmployerContacts" controller="BPReports" renderAs="pdf" showHeader="false" applyHtmlTag="false" readOnly="true">
    <head>
        <style type="text/css" media="print">
            @page
            {
                size:A4 landscape;
                @bottom-center
                {
                    font-family:arial,sans-serif;
                    font-size:10px;
                    width:100%;
                    padding-left: 30px;
                    height:15px;
                    content: "Page "counter(page)" of "counter(pages)
                }
                @top-right
                {
                    font-family:arial,sans-serif;
                    font-size:12px;
                    padding-right:10px;
                    content: "Report Date: {!TEXT(DAY(TODAY()))}/{!TEXT(MONTH(TODAY()))}/{!TEXT(YEAR(TODAY()))}"
                }
                @top-center
                {
                    font-family:arial,sans-serif;
                    font-size:12px;
                    content: "Employer Marketing Activity"
                }
            }
            @media print
            {
                .pgForce
                {
                    page-break-inside: avoid;
                }
                .pgBreak
                {
                    page-break-after: always;
                }
            }
            body
            {
                font-family:arial,sans-serif;
                font-size:10px;
            }
            .left
            {
                text-align:left;
            }
            .right
            {
                text-align:right;
            }
            .tblHdr
            {
                text-align:center;
                background-color:#CCCCCC;
            }
            table
            {
                width:100%;
                border-collapse: collapse;
                margin-bottom:10px;
            }
            table td, table th
            {
                padding: 3px;
            }
            table th
            {
                border: 1px solid black;
                vertical-align: bottom;
            }
            table td, table th
            {
                vertical-align: top;
            }
            .ecHdr
            {
                border: none;
            }
            .pgHdr, .sectHdr, .bold
            {
                font-weight:bold;
            }
            .pgHdr, .sectHdr
            {
                background:#D1D1D1;
                color:black;
                margin-bottom:10px;
                text-align:center;
            }
            .pgHdr
            {
                text-align:center;
                height:15px;
                font-size:110%;
            }
            .sectHdr
            {
                margin-top:10px;
                text-align:center;
                height:15px;
            }
            .dataCell, .rightAlign>td
            {
                text-align:right;
                padding-right: 5px;
            }
            .lbl
            {
                margin-top:5px;
            }
            .lbl>div
            {
                width:110px;
                display:inline-block;
            }
            .header
            {
                height:70px;
            }
            caption
            {
                margin-top:20px;
            }
            .header, caption
            {
                font-size: 1.1em;
                font-weight: bold;
                text-align:left;
                width:100%;
                background-color:#CCCCCC;
                border-top-left-radius:4em;
                border-top-right-radius:4em;
            }
        </style>
    </head>
    <body>
        <apex:dataTable value="{!EmployerResults}"
                            var="emp"
                            rowClasses="left"
                            headerClass="tblHdr ecHdr">
            <apex:facet name="caption">
                Employer Results - {!$CurrentPage.parameters.month}
            </apex:facet>
            <apex:column headerValue="Employer" value="{!emp.Employer.Name}"/>
            <apex:column headerValue="Phone" value="{!emp.Employer.Phone__c}"/>
            <apex:repeat value="{!ContactResults}" var="result">
                <apex:column value="{!emp.ResultCountByResult[result]}" headerValue="{!result}" styleClass="rightAlign"/>
            </apex:repeat>
            <apex:column headerValue="Total" value="{!emp.Total}" styleClass="rightAlign"/>
        </apex:dataTable>
    </body>
</apex:page>
